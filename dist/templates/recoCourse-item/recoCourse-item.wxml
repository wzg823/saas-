
<template name='recoCourse-item'>

  <view class='recocell-view weui-flex'>

    <view class='head-img-view' data-price='{{ price / 100 }}' id='{{ cardId }}' bindtap='bindRecoCellTap'>
      <image mode='aspectFill' src='{{ headimg }}'></image>
    </view>

    <view class='weui-flex__item' data-price='{{ price / 100 }}' id='{{ cardId }}' bindtap='bindRecoCellTap'  open-type="getUserInfo">
      <view class='name-text'>{{ courseName }}</view>
      <view class='info-text'> 
        ¥{{ price / 100 }}
        <text>共{{ courseTime }}课时</text>
      </view>
    </view>

    <view class='btn-view' data-price='{{ price / 100 }}' id='{{ cardId }}' bindtap='bindBuyTap'  open-type="getUserInfo">
      <view>购买</view>
    </view>
    
  </view>

</template>