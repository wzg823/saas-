

.bg-view {
    padding-bottom: 110rpx;
}
/* 向下展开 */
.weui-flex {
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.weui-cells {
    margin-top: 0;
    opacity: 0;
    -webkit-transform: translateY(-50%);
            transform: translateY(-50%);
    -webkit-transition: .3s;
    transition: .3s;
}
.weui-cells:before,
.weui-cells:after {
    display: none;
}
.weui-cells_show {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
.weui-cell:before {
    right: 15px;
}
.kind-list__item {
    margin: 10px 0;
    background-color: #22233A;
    border-radius: 2px;
    overflow: hidden;
    font-size: 30rpx;
}
.kind-list__item:first-child {
    margin-top: 0;
}
.kind-list__img {
    width: 36rpx;
    height: 20rpx;
    transition: transform .4s;
}

.kind-list-title__img {
    width: 125rpx;
    height: 125rpx;
    margin-right: 20rpx;
}
.kind-list-title__text {
    margin-right: 20rpx;
}

.kind-list__item-hd {
    padding: 20rpx;
    -webkit-transition: opacity .3s;
    transition: opacity .3s;
}
.kind-list__item-hd_show {
    opacity: .4;
}
.kind-list__item-bd {
    height: 0;
    overflow: hidden;
}
.kind-list__item-bd_show {
    height: auto;
}


.inside-cell {
    height: 140rpx;
    width: 100%;
    border-bottom: 1px #262439 solid;
}
.inside-cell view {
    position: relative;
    display: inline-block;
    width: 80%;
}
.inside-cell .cellImg {
    width: 150rpx;
    height: 100rpx;
    margin-left: 30rpx;
    margin-top: 20rpx;
    float: left;
    position: absolute;
}
.inside-cell .cellIcon {
    width: 40rpx;
    height: 40rpx;
    float: left;
    position: absolute;
    margin-top: 50rpx;
    margin-left: 85rpx;
}
.inside-cell .text {
    margin-left: 220rpx;
    margin-top: 35rpx;
    height: 70rpx;
    line-height: 70rpx;
    display: inline-block;
}
.inside-cell .cellChoosedIcon {
    width: 40rpx;
    height: 40rpx;
    float: right;
    margin-top: 30rpx;
    margin-right: 30rpx;
}