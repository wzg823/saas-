

<template name="intention-item">

  <view class='int-cell weui-flex' id='{{ memId }}' bindtap='bindIntentionCellTap'>
    
    <view>
      <image class='headimg' mode='aspectFill' src='{{ headimg }}'></image>
    </view>

    <view class='content weui-flex__item'>
      <view>{{ title }}</view>
      <view class='text'> {{ text }}</view>
    </view>

    <view>
      <view class='handle-btn'>处理</view>
    </view>

  </view>

</template>