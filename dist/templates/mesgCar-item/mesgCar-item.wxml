
<template name='mesgCar-item'>

  <view class='mesgCar-cell' id='{{ index }}' bindtap='bindMesgCarCellTap'>

    <view class='up-view'>
      <image class='left-icon' src='../../images/icon/message/news_icon.png'></image>
      <text>{{ title }}</text>
      <text class='time-text'>{{ time }}</text>
    </view>
  
    <view class='down-view'>{{ content }}</view>
    
  </view>

</template>