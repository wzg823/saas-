
.confirm-bgview {
    background-color: rgba(1, 1, 1, 0.3);
    height: 100%;
    width: 100%;
    position: fixed;
    top: 0;
}

.confirm-view {
    background-color: #22233A;
    width: 80%;
    margin: 45% 10%;
    border-radius: 4%;
    text-align: center;
}

.confirm-view .text-view {
    padding: 70rpx;
}
.confirm-view .btn {
    padding: 25rpx 0;
    border-top: 2rpx black solid;
    color: #BAB9C7;
}
.confirm-view .confirmBtn {
    color: #FF904C;
    margin-left: 2rpx;
    border-left: 2rpx black solid;
}