.fl{
	float: left;
}
.fr{
	float: right;
}
.clearfix{
	overflow: auto;
    _height: 1%;
}
.top-part{
	padding: 45rpx 30rpx;
}
.date-select{
	margin-bottom: 30rpx;
}
.left-btn image,.right-btn image{
	display: block;
	width: 45rpx;
	height: 45rpx;
}
.date-view{
	display: block;
	width: calc(100% - 90rpx);
	text-align: center;
	color: #BAB9C7;
}
.kcal-data{
	position: relative;
	padding-top: 20rpx;
}
.circle{
	margin: 0 auto;
}
.circle image{
	position: absolute;
	top: 0;
	left: 50%;
	margin-left: -100rpx;
	width: 200rpx;
	height: 200rpx;
}
.circle text{
	width: 100%;
	display: block;
	text-align: center;
}
.circle text:nth-child(2){
	font-size: 72rpx;
}
.circle text:nth-child(3){
	color: #BAB9C7;
	font-size: 28rpx;
	margin-top: -10rpx;
}
.sport-data{
	margin-top: 60rpx;
	color: #fff
}
.sport-time{
	width: 30%;
}
.sport-time text{
	display: block;
	text-align: center;
}
.sport-project{
	width: 30%;
}
.sport-project text{
	display: block;
	text-align: center;
}
.sport-time text:nth-child(2),.sport-project text:nth-child(2){
	color: #BAB9C7;
}
.bottom-part{
	width: 100%;
	position: relative;
	margin-top: 80rpx;
	/*overflow: hidden;*/
}
.table{
	width: 200%;
	position: absolute;

	margin-left: -30rpx;
}
.table .table-item{
	width: 100rpx;
	height: 400rpx;
	border: 1px dotted #848296;
	border-right: none;
}
.table .table-item-stand{
	width: 100%;
	height: 100rpx;
	border-bottom: 1px dotted #848296;
}
.table .table-item-stand:last-child{
	border: none;
}
.column{
	width: 100%;
	height: 400rpx;
	position: relative;
}
.column .column-item{
	height: 100rpx;
	width: 40rpx;
	background: linear-gradient(#FFDDC8,#FF904C);
	position: absolute;
	bottom: -1rpx;
	left: 52rpx;
}
.column-item .point{
	position: absolute;
	top: -60rpx;
	left: -10rpx;
}
.column-item .point view{
	position: absolute;
	bottom: -60rpx;
	left: 20rpx;
	font-size: 80rpx;
	color: rgba(255, 145, 78, 1);
}
.column-item:nth-child(2){
	left: 155rpx;
}
.column-item:nth-child(3){
	left: 255rpx;
}
.column-item:nth-child(4){
	left: 355rpx;
}
.column-item:nth-child(5){
	left: 455rpx;
}
.column-item:nth-child(6){
	left: 555rpx;
}
.column-item:nth-child(7){
	left: 655rpx;
}
.date-week{
	position: relative;
	margin-top: 10rpx;
}
.date-week text{
	font-size: 24rpx;
	color:rgb(186, 185, 199);
	position: absolute;
	left: 40rpx;
}
.date-week text:nth-child(2){
	left: 140rpx;
}
.date-week text:nth-child(3){
	left: 240rpx;
}
.date-week text:nth-child(4){
	left: 340rpx;
}
.date-week text:nth-child(5){
	left: 440rpx;
}
.date-week text:nth-child(6){
	left: 540rpx;
}
.date-week text:nth-child(7){
	left: 640rpx;
}