/* pages/myCoach/courseTraining.wxss */

@import '../../../templates/courseTraining-item/courseTraining-item.wxss';

.title-view {
    height: 224rpx;
    width: 100%;
    background-color: #22233A;
}

.course-item-view {
    padding: 20rpx 30rpx 0;
}
.course-item {
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    color: #FF904C;
    border: 1px #FF904C solid;
    border-radius: 6rpx;
    margin-right: 20rpx;
    text-align: center;
    display: inline-block;
}
.course-level-view {
    padding: 20rpx 30rpx;
    font-size: 34rpx;
}

.shareIcon {
    width: 34rpx;
    height: 40rpx;
    float: right;
    margin-top: -25rpx;
}

.share-success-remind-view {
    width: 100%;
    text-align: center;
    position: fixed;
    bottom: 200rpx;
}
.share-success-remind-btn {
    width: 420rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #818181;
    border-radius: 6rpx;
    margin: auto;
    text-align: center;
}

.pre-btn-img {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
    margin-top: 226rpx;
    float: right;
}
.next-btn-img {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
    margin-top: 80rpx; 
    float: right;
}

.pre-btn {
    background-color: #22233A;
    height: 100rpx;
    color: #BAB9C7;
    text-align: center;
    line-height: 100rpx;
}