/* pages/myCoach/courseCustom.wxss */

/* 日历 */
.calendar-bgview {
    width: 100%;
    height: 120rpx;
    text-align: center;
    background-color: #22233A;
}
.today__item {
    border-radius: 50%;
    height: 54rpx;
    width: 54rpx;
    /* color: #000000; */
    background-color: #FF904C;
    margin: auto;
    line-height: 54rpx;
}
.day__item {
    height: 54rpx;
    width: 54rpx;
    margin: auto;
    line-height: 54rpx;
}

/* 级别 */
.level-view {
    margin: 10rpx 0;
    background-color: #22233A;
    padding: 30rpx 0;
}

.course-btn-item {
    border: 1px #ffffff solid;
    border-radius: 6rpx;
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin: auto;
}
.course-btn-icon {
    width: 30rpx;
    height: 30rpx;
    border: 1px #ffffff solid;
    border-radius: 50%;
    display: inline-block;
    margin: 13rpx 15rpx 0 20rpx;
    float: left;
}
.course-btn-icon image {
    width: 33rpx;
    height: 33rpx;
    float: left;
}

/* 人 */
.personal-view {
    background-color: #22233A;
    position: relative;
    padding-top: 20rpx;
    height: 874rpx;
}
.personal-btn-view {
    position: absolute;
    z-index: 11;
    width: 100%;
}
.personal-bgimg {
    width: 750rpx;
    height: 874rpx;
    position: absolute;
}


.top-btn {
    margin-top: 20rpx;
}
.top-left-btn {
    margin-top: 200rpx;
    margin-left: 50rpx;
}
.top-right-btn {
    margin-top: -60rpx;
    margin-right: 50rpx;
}
.center-btn {
    margin-top: 215rpx;
    margin-right: 90rpx;
}
.bottom-left-btn {
    margin-left: 50rpx;
    margin-top: 120rpx;
    font-size: 27rpx;
}