.clearfix {
    overflow: auto;
    _height: 1%;
}
.page{
	
}
.month-pick{
	padding-top: 30rpx;
	padding: 0 200rpx;
	background-color: #22233A;
}
.month-pick .prew{
	float: left;
	padding: 20rpx;
}
.month-pick .prew image{
	width: 14rpx;
	height: 24rpx;
}
.month-pick .month-show{
	text-align: center;
	width: calc(100% - 108rpx);
	float: left;
	margin-top: 18rpx;
}
.month-pick .next{
	float: right;
	padding: 20rpx;
}
.month-pick .next image{
	width: 14rpx;
	height: 24rpx;
}
.customer-data{
	padding: 0 30rpx;
	background-color: #22233A;
}
.customer-data-title{
	height: 80rpx;
}
.customer-data-title image{
	width: 38rpx;
	height: 38rpx;
	margin-top: 22rpx;
	margin-right: 10rpx;
	float: left;
}
.customer-data-title text{
	height: 100%;
	line-height: 80rpx;
	display: block;
	float: left;
	margin-left: 10rpx;
}
.customer-data-con{
	padding-bottom: 30rpx;
	position: relative;
}
.customer-num{
	width: 300rpx;
	height: 150rpx;
	text-align: center;
	line-height: 150rpx;
	border: 1px solid #FF852E;
	margin-top: 50rpx;
}
.customer-num text{
	display: inline-block;
	width: 100%;
	height: 40rpx;
	line-height: 40rpx;
	float: left;
	margin-top: 20rpx;
}
.customer-num text:nth-child(1){
	color: #BAB9C7;
	font-size: 24rpx;
}
.customer-num text:nth-child(2){
	
}
.topFive{
	position: absolute;
	bottom: 30rpx;
	right: 0;
}
.topFive text{
	font-size: 26rpx;
	color: #BAB9C7;
}
.top-check{	
	padding: 5rpx 20rpx;
	background-color: #FF852E;
	text-align: center;
	line-height: 50rpx;
	font-size: 24rpx;
	border-radius: 6rpx;
	margin-top: 20rpx;
}
.topFive image{
	width: 26rpx;
	height: 14rpx;
	margin-left: 10rpx;
}
.customer-table{
	padding: 30rpx;
	margin-top: 1px;
	background-color: #22233A;
}
.customer-table .tr{
	width: 100%;
}
.customer-table .tr:nth-child(odd){
	background-color: rgba(255,255,255,0.1);
}
.customer-table .tr:nth-child(even){
	background-color: rgba(255,255,255,0.3);
}
.customer-table .td{
	float: left;
	width: 33%;
	padding: 5rpx 0;
	text-align: center;
	font-size: 28rpx;
}
.customer-table .td:nth-child(2){
	border-left: 1px solid #000; 
	border-right: 1px solid #000; 

}
.sale-rank{
	padding: 0 30rpx;
	background-color: #22233A;
	margin-top: 10rpx;
	padding-bottom: 30rpx;
}
.sale-rank-title{
	height: 80rpx;
}
.sale-rank-title image{
	width: 38rpx;
	height: 38rpx;
	margin-top: 22rpx;
	margin-right: 10rpx;
	float: left;
}
.sale-rank-title text{
	height: 100%;
	line-height: 82rpx;
	display: block;
	float: left;
	margin-left: 10rpx;
}
.sale-rank-con{
	width: 100%;
}
.sale-rank-con .rank{
	width: 100%;
	height: 50rpx;
	background-color: rgba(255,255,255,0.2);
	border-radius: 4rpx;
	position: relative;
	margin-bottom: 25rpx;
}
.sale-rank-con .rank >view{
	position: absolute;
	top: 0;
	left: 0;
	height: 100%;
	background-color: #E44837;
	z-index: 999;
	border-radius: 4rpx;
	text-align: left;
}
.sale-rank-con:nth-child(2) .rank >view{
	background-color: #FF904C;
}
.sale-rank-con:nth-child(3) .rank >view{
	background-color: #9569FA;
}
.sale-rank-con:nth-child(4) .rank >view{
	background-color: #3477F9;
}
.sale-rank-con:nth-child(5) .rank >view{
	background-color: #32A054;
}
.sale-rank-con .rank >text{
	position: absolute;
	width: 100%;
	height: 100%;
	left: 30rpx;
	top: 0;
	z-index: 1000;
	font-size: 24rpx;
	line-height: 50rpx;
}
.sale-rank-con .rank >text:nth-child(3){
	right: 30rpx;
	left: -30rpx;
	text-align: right;
}
.turnover{
	padding: 0 30rpx;
	background-color: #22233A;
	margin-top: 10rpx;
}
.turnover-title{
	height: 80rpx;
}
.turnover-title image{
	width: 38rpx;
	height: 38rpx;
	margin-top: 22rpx;
	margin-right: 10rpx;
	float: left;
}
.turnover-title text{
	height: 100%;
	line-height: 82rpx;
	display: block;
	float: left;
	margin-left: 10rpx;
}