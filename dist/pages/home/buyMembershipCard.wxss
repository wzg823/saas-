/* pages/home/buyMembershipCard.wxss */

.car-cell-view {
    position: relative;
    padding-top: 30rpx; 
    padding-bottom: 190rpx;
}
.car-cell {
    position: relative;
    padding: 0 30rpx;
    margin-bottom: 30rpx;
    height: 320rpx;
}
.bg-img {
    width: 690rpx;
    height: 320rpx;
    position: absolute;
    border-radius: 15rpx;
}
.icon-img {
    width: 81rpx;
    height: 37rpx;
}
.info-view {
    position: absolute;
    padding: 40rpx 30rpx;
}
.car-type-view {
    margin-top: 60rpx;
    padding: 0 30rpx 15rpx 0;
    margin-bottom: 20rpx;
    border-bottom: 2px #FF904C solid;
}
.car-cell .check-icon {
    width: 37rpx;
    height: 37rpx;
    position: absolute;
    bottom: 50rpx;
    right: 60rpx;
}

.buy-foot-view {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: auto;
    background-color: #22233A;
    line-height: 0;
}
.check-view {
    padding: 30rpx;
    font-size: 28rpx;
    text-align: left;
}
.check-text {
    height: 30rpx;
    line-height: 30rpx;
}
.buy-foot-view .check-icon {
    width: 30rpx;
    height: 30rpx;
    float: left;
    margin-right: 20rpx;
    margin-top: 1rpx;
}
.buy-view {
    text-align: center;
    font-size: 32rpx;
}
.buy-btn{
    background-color: #FF904C;
    height: 100rpx;
    line-height: 100rpx;
}
.price-btn {
    height: 100rpx;
    line-height: 100rpx;
    border-top: 2px #262439 solid;
}