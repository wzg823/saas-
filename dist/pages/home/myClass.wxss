/* pages/home/myClass.wxss */

.title-view {
    color: #848296;
    padding: 30rpx;
    position: relative;
}
.title-view image{
    position: absolute;
    right: 30rpx;
    width: 42rpx;
    height: 42rpx;
}
.bottom-view {
    color: #BAB9C7;
    padding: 15rpx 0;
    position: relative;
}
.up-view {
    border-bottom: 1rpx #262439 solid;
    padding: 20rpx 0 15rpx;
}
.up-view .headimg{
    width: 130rpx;
    height: 130rpx;
    margin-right: 30rpx;
    float: left;
    margin-top: 11rpx;
}
.info-view .name-text{
    font-size: 34rpx;
    margin-bottom: 30rpx;
    color: white;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.info-view .name-text text{
    display: block;
    float: left;
    width: 80%;
}
.myclass-cell {
    margin-bottom: 20rpx;
    padding: 0 30rpx 0;
    color: #BAB9C7;
    background-color: #22233A;
    font-size: 28rpx;
    height: 250rpx;
}
.btn {
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #FF904C;
    border: 1rpx #FF904C solid;
    border-radius: 6rpx;
    text-align: center;
    float: right;
    margin-top: 80rpx;
}
.cancel {
    color: #BAB9C7;
    border: 1rpx #BAB9C7 solid;
    position: absolute;
    right: 0;
    bottom:10rpx;
}
.class-status{
    float: right;
    color: #BAB9C7;
    font-size: 28rpx;
}
.class-status-on{
    float: right;
    color: #FF904C;
    font-size: 28rpx;
}
.title-picker{
    width: 100%;
    height: 100rpx;
    background-color: #22233A;
    margin-bottom: 10rpx;
}
.pickerItem{
    width: calc(33% - 40rpx);
    margin: 0 20rpx;
    float: left;
    text-align: center;
    line-height: 100rpx;
    color: #BAB9C7;
}
.current{
    border-bottom: 2px solid #FF904C;
}
.scanCodeBtn{
    position: fixed;
    width: 250rpx;
    height: 70rpx;
    bottom: 50rpx;
    left: 50%;
    margin-left: -125rpx;
    border-radius: 50rpx;
}
