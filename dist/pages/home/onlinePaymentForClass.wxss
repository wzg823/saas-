.recocell-view {
    height: 150rpx;
    width: 100%;
    background-color: #22233A;
    margin-bottom: 2rpx;
    font-size: 32rpx;
}
.head-img-view {
    width: 120rpx;
    height: 120rpx;
    margin: 15rpx 30rpx;
}
.head-img-view image {
    width: 100%;
    height: 100%;
}
.recocell-view .name-text {
    margin-top: 15rpx;
}
.recocell-view .info-text {
    margin-top: 33rpx;
    font-size: 28rpx;
    color: #FF904C;
}
.recocell-view .info-text text {
    margin-left: 20rpx;
    color: #bab9c7;
}

.order-cell-view view{
    padding: 0 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    background-color: #22233A;
    margin-top: 2rpx;
    color: #BAB9C7;
}
.order-cell-view text {
    float: right;
}

.check-text {
    margin-top: 30rpx;
    background-color: #22233A;
    padding: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
}

.right-icon {
    margin-top: 33rpx;
    margin-left: 20rpx;
    margin-right: 0;
}

.checked-icon {
    float: left;
    margin-top: -2rpx;
    margin-right: 20rpx;
}