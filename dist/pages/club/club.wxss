/* pages/club/club.wxss */

@import '../../templates/club-item/club-item.wxss';

.clearfix {
  overflow: auto;
  _height: 1%;
}
.top{
    position: relative;
}
.top .shop{
    position: absolute;
    background-color: rgba(0,0,0,0.4);
    padding: 5rpx 10rpx;
    top: 15rpx;
    left: 30rpx;
    font-size: 24rpx;
}
.swiper {
    width: 100%;
    height: 300rpx;
}
.swiper-img {
    width: 100%;
    height: 100%;
}

.club-item-view {
    width: 100%;
    text-align: center;
    background-color: #22233A;
    font-size: 28rpx;
}
.club-item {
    padding: 50rpx 0 20rpx;
}
.club-item-icon {
    width: 90rpx;
    height: 90rpx;
}

.recommend-title-view {
    height: 80rpx;
    line-height: 80rpx;
    color: #BAB9C7;
    /*padding: 0 30rpx;*/
    background-color: #22233A;
    margin-top: 10rpx;
    overflow: hidden;
}
.recommend-title-icon{
    width: 44rpx;
    height: 44rpx;
    display: block;
    float: left;
    margin-top: 18rpx;
    margin-right: 10rpx;
}
.recommend-title-more{
    font-size: 22rpx;
    float: right;
}
.recommend-title-more >i{
    font-family: "黑体";
    margin-left: 10rpx;
    font-size: 28rpx;
}
.limit-item-box{
    width: calc(100% - 60rpx);
    padding: 0 30rpx 30rpx;
    background-color: #22233A;
    margin-top: -1rpx;
}
.limit-empty{
    color: #bab9c7;
    width: 100%;
    margin-top: 30rpx;
    display: block;
    text-align: center;
}
.no-data-view image{
    margin-top: 60rpx;
}
.limit-item{
    width: calc(50% - 10rpx);
    height: 200rpx;
    background-color: #22233A;
    float: left;
    border-radius: 6rpx;
    position: relative;
    overflow: hidden;
}
.limit-item-img{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
}
.limit-item:nth-child(3),.limit-item:nth-child(5){
    margin-left: 19rpx;
}
.limit-item:nth-child(4),.limit-item:nth-child(5){
    margin-top:20rpx;
}
.limit-item >text:nth-child(2){
    width: 100%;
    font-size: 34rpx;
    height: 30rpx;
    color:rgba(255,255,255,1);
    line-height:30rpx;
    text-align: center;
    display: inline-block;
    position: absolute;
    top: 85rpx;
    left: 0;
}
.limit-item >text:last-child{
    position: absolute;
    bottom: 10rpx;
    right: 20rpx;
    font-size: 24rpx;
    color:rgba(255,144,76,1);
}
.club-item-box{
    width: calc(100% - 60rpx);
    padding: 0 30rpx;
    background-color: #22233A;
    margin-top: 20rpx;
}
.club-item{
    width: calc(50% - 10rpx);
    height: 470rpx;
    background:rgba(56,57,79,1);
    float: left;
    border-radius: 6rpx;
    position: relative;
    margin-bottom:20rpx;
    box-shadow:2px 14px 10px rgba(0,0,0,0.05);
    overflow: hidden;
    padding: 0;
}
.club-item:nth-child(odd){
    margin-left: 19rpx;
}
.club-item:first-child{
    margin-left: 0rpx;
}
.club-item >.club-item-img{
    width: 100%;
    height: 300rpx;
    margin: 0;
}
.club-item-tit{
    width: calc(100% - 40rpx);
    height: 86rpx;
    font-size:28rpx;
    color:rgba(254,254,254,1);
    line-height:42rpx;
    padding: 0 20rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.club-item-tip{
    width: calc(100% - 40rpx);
    padding: 0 20rpx;
    font-size:28rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    display: inline-block;

}
.club-item-tip .club-item-tip-username{
    width: 44%;
    display: block;
    float: left;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.club-item-tip >text:last-child{
    float: right;
    display: block;
    width: 55%;
}
.vip-active-box{
    width: calc(100% - 60rpx);
    padding: 0 30rpx 30rpx;
    background-color: #22233A;
}
.vip-item-box{
    width: 100%;
}
.vip-item-box .scroll-view_H{
    height: 200rpx;
    width: 100%;
    white-space: nowrap;
}
.scroll-h-item{
    width: 300rpx;
    height: 200rpx;
    margin-right: 20rpx;
    display: inline-block;
    position: relative;
}
.scroll-h-item image{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 0;
}
.scroll-h-item text{
    position: absolute;
    width: 100%;
    text-align: center;
    z-index: 99;
    left: 0;
    top: 76rpx;
    font-size: 34rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.vip-item-mosk{
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.3);
    z-index: 1;
    left: 0;
    top: 0;
}
