/* pages/club/clubDynamics.wxss */
.bg-view{
    padding: 0 30rpx;
}
.clubdy-cell {
    background-color: #22233A;
    color: #BAB9C7;
    font-size: 26rpx;
    margin-top: 20rpx;
    width: 335rpx;
    float: left;
    border-radius: 6rpx;
    height: 470rpx;
    position: relative;
}
.clubdy-cell:nth-child(even){
    margin-left: 20rpx;
}
.clubdy-cell .titleImg {
    display: block;
    width: 335rpx;
    height: 300rpx;
    /*float: left;*/
    /*margin: 20rpx 20rpx 20rpx 0;*/
}
.clubdy-cell .title-text-view {
    display: inline-block;
    /*margin-top: 20rpx;*/
    width: calc(100% - 40rpx);
    padding: 0 20rpx;
    padding-top: 20rpx;
    overflow: hidden;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2; 
    height: 82rpx;
}
.clubdy-cell .title-text {
    font-size: 30rpx;
    color: white;
}
.clubdy-cell .down-view {
    padding: 0rpx 20rpx;
    border-top: 1rpx #262439 solid;
    width: calc(100% - 40rpx);
    position: absolute;
    bottom: 10rpx;
    left: 0;
}   
.author-view{
    width: 50%;
    float: left;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
} 
.time-view{
    width: 50%;
    float: right;
    text-align: right;
}
.clubdy-cell .good-icon {
    width: 29rpx;
    height: 31rpx;
    float: left;
    margin-right: 10rpx;
}
.clubdy-cell .good-view {
    display: inline-block;
    margin-left: 30rpx;
}
.clubdy-cell .author-view {
    text-align: left;
}
.clubdy-cell .content-text{
    overflow:hidden;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2; 
    height: 82rpx;
    /*margin-top: 20rpx;*/

}
